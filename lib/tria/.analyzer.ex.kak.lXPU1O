defmodule Tria.Analyzer do

  import Tria.Common

  @doc "Returns a list of calls in the passed AST"
  def calls(ast) do
    Macro.prewalk(ast, [], fn
      ast, acc when not is_variable(ast) ->
        if Macro.special_form?(ast) do
          {ast, acc}
        else
          case ast do
            {{:".", _, _}, _, _} = aliased,
          end
          {}
        end

    end)
  end
  
end
